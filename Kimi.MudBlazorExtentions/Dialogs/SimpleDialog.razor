<MudDialog>
    <DialogContent>
        <MudText>@ContentText</MudText>
    </DialogContent>
    <DialogActions>
        @if (!string.IsNullOrEmpty(CancleButtonText))
        {
            <MudButton OnClick="Cancel">@CancleButtonText</MudButton>
        }
        <MudButton Color="@Color" Variant="Variant.Filled" OnClick="Submit">@SubmitButtonText</MudButton>
    </DialogActions>
</MudDialog>
